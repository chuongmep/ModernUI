<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://Genewsoftware.com/ModernUI"
                    xmlns:local="clr-namespace:Genew.ModernUI.App">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Genew.ModernUI;component/Assets/ModernUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Rectangle x:Key="WindowBackgroundContent"
               x:Shared="false">
        <Rectangle.Fill>
            <ImageBrush local:BingImage.UseBingImage="True"
                        Opacity=".3"
                        Stretch="UniformToFill" />
        </Rectangle.Fill>
    </Rectangle>

</ResourceDictionary>