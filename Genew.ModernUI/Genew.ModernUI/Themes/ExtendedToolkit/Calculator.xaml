                                          VerticalAlignment="Top"
                                          Margin="4,4,0,0"
                                          Visibility="{Binding Memory, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource CalculatorMemoryToVisibilityConverter}}" />
